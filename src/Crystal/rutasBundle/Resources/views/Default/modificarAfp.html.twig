{% extends 'CrystalrutasBundle:Default:index.html.twig' %}

{% block center %}
<div class="top-bar">                    
    <div align="center"><h1>Modificar AFP</h1></div>
</div>
<br /><br /><br /><br /><br /><br />

<form method="post" enctype="multipart/form-data">
<div class="table">
<table class="listing form" cellpadding="0" cellspacing="0" style="width: 80%; margin: 0 auto;border: 0px;">

 <tr>
	            <td><strong>Nombre</strong></td>
				<td><input type="text" name="txtName" class="text"  required value="{{ afp.nombre}}"/></td>
				
</tr>
 <tr>
	            <td><strong>Porcentaje Empleado</strong></td>
				<td><input type="text" name="txtEmploye" class="text"  required value="{{ afp.porcentajeEmpleado}}"/></td>
				
</tr>
 <tr>
	            <td><strong>Porcentaje Patrono</strong></td>
				<td><input type="text" name="txtPatrono" class="text"  required value="{{ afp.porcentajePatrono}}"/></td>
				
</tr>
<tr>
				<td><input type="submit" value="Aceptar" name="btnAddDep" class="button"  value="Agregar Empleado" /></td>
				<td><input type="button" name="btnCancel" class="button" onCLick="document.location.href='{{ path('listaAfp') }}';" value="Cancelar" /></td>
</tr>

</table>
</div>
{% endblock %}